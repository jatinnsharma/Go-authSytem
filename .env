# Environment mode: development, production, etc.
ENVIRONMENT=development

# Port for your app to listen on
PORT=8080

DATABASE_URL=postgres://root:password@localhost/authdb?sslmode=disable

# Redis connection URL
REDIS_URL=redis://localhost:6379

# JWT secret key for signing tokens (change this to a strong secret)
JWT_SECRET=buildingmyfirstauthsystemingolangthisisaverylongsecretkey
JWT_EXPIRY=168h
REFRESH_EXPIRY=720h

# SMTP (email) server details (not in use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Rate limit per minute (number of requests allowed)
RATE_LIMIT_PER_MIN=100

OTP_EXPIRY=30m
BCRYPT_COST=12
